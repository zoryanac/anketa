<% if notice.present? %>
  <div class="ui positive message">
    <div class="header">
      <%= notice %>
    </div>
  </div>
<% end %>

<h1>Application Forms</h1>

<div class="ui info message">
  <div class="header">
    Are you ready to join my educational project? If yes, fill in this application form :)
  </div>
</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Interests</th>
      <th>English level</th>
      <th>Experience</th>
      <th>Motivation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @application_forms.each do |application_form| %>
      <tr>
        <td><%= application_form.email %></td>
        <td><%= application_form.first_name %></td>
        <td><%= application_form.last_name %></td>
        <td><%= application_form.age %></td>
        <td><%= application_form.interests %></td>
        <td><%= application_form.english_level %></td>
        <td><%= application_form.experience %></td>
        <td><%= application_form.motivation %></td>
        <td>
          <%= link_to application_form, class: 'ui primary button' do %>
            <i class="file text outline icon"></i>
            Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_application_form_path(application_form), class: 'ui positive button' do %>
            <i class="write icon"></i>
            Edit
          <% end %>
        </td>
        <td>
          <%= link_to application_form, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui negative button' do %>
            <i class="trash outline icon"></i>
            Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_application_form_path, class: 'ui violet basic button' do %>
  <i class="add circle icon"></i>
  New Application Form
<% end %>
